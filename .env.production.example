# Production Environment Configuration
# Copy this to .env for production deployment

# Application
APP_NAME=DocGenerator
APP_ENV=production
DEBUG=False
API_PREFIX=/api/v1

# MongoDB Atlas (REQUIRED)
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGODB_DB_NAME=docgen

# Hugging Face (REQUIRED - for text generation)
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxx
TEXT_GENERATION_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_FORMATS=png,jpg,jpeg,svg

# PDF Generation
PDF_OUTPUT_DIR=./generated_pdfs
PDF_DPI=300

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS (Update with your domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Port (Sevalla will set this automatically)
PORT=8000
