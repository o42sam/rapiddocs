# Application
APP_NAME=RapidDocs
APP_ENV=production
DEBUG=False
API_PREFIX=/api/v1

# MongoDB Remote
# IMPORTANT: Set this in your deployment platform's environment variables
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster1
MONGODB_DB_NAME=docgen

# Hugging Face
# IMPORTANT: Set your actual API key in deployment platform's environment variables
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY_HERE
TEXT_GENERATION_MODEL=meta-llama/Llama-3.2-3B-Instruct
IMAGE_GENERATION_MODEL=black-forest-labs/FLUX.1-schnell

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_FORMATS=png,jpg,jpeg,svg

# PDF Generation
PDF_OUTPUT_DIR=./generated_pdfs
PDF_DPI=300

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS - Production domains
CORS_ORIGINS=https://rapiddocs.io,https://www.rapiddocs.io

# Authentication / JWT
# IMPORTANT: Generate new secret keys for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET_KEY
JWT_REFRESH_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_DIFFERENT_STRONG_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth2
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=https://rapiddocs.io/api/v1/auth/google/callback
FRONTEND_URL=https://rapiddocs.io

# Bitcoin Payment Configuration
# IMPORTANT: Change to mainnet for production if accepting real payments
BITCOIN_NETWORK=testnet
BITCOIN_PERSONAL_WALLET=tb1qw508d6qejxtdg4y5r3zarvary0c5xw7kxpjzsx
BITCOIN_CONFIRMATIONS_REQUIRED=3
BITCOIN_PAYMENT_TIMEOUT_MINUTES=60
BITCOIN_API_URL=https://blockstream.info/testnet/api

# For mainnet, use these settings instead:
# BITCOIN_NETWORK=mainnet
# BITCOIN_PERSONAL_WALLET=YOUR_MAINNET_BITCOIN_ADDRESS
# BITCOIN_API_URL=https://blockstream.info/api
