# Application
APP_NAME=RapidDocs
APP_ENV=production
DEBUG=False
API_PREFIX=/api/v1

# MongoDB Remote (using existing Atlas connection)
MONGODB_URL=YOUR_MONGODB_CONNECTION_STRING_HERE
MONGODB_DB_NAME=docgen_prod

# Hugging Face
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY_HERE
TEXT_GENERATION_MODEL=meta-llama/Llama-3.2-3B-Instruct
IMAGE_GENERATION_MODEL=black-forest-labs/FLUX.1-schnell

# Google Gemini API
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=models/gemini-2.0-flash

# File Storage (VPS paths)
UPLOAD_DIR=/home/docgen/uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_FORMATS=png,jpg,jpeg,svg

# PDF Generation
PDF_OUTPUT_DIR=/home/docgen/generated_pdfs
PDF_DPI=300

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS - Production domains (update with your Firebase hosting URL)
# Example: https://your-app.web.app,https://your-app.firebaseapp.com
CORS_ORIGINS=https://rapiddocs.web.app,https://rapiddocs.firebaseapp.com,https://rapiddocs.io,https://www.rapiddocs.io

# Authentication / JWT
# IMPORTANT: Generate new secret keys for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
# REPLACE THESE WITH YOUR OWN GENERATED KEYS BEFORE DEPLOYMENT
JWT_SECRET_KEY=GENERATE_NEW_KEY_WITH_python_-c_import_secrets_print_secrets_token_urlsafe_32
JWT_REFRESH_SECRET_KEY=GENERATE_DIFFERENT_KEY_WITH_python_-c_import_secrets_print_secrets_token_urlsafe_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth2
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=https://rapiddocs.io/api/v1/auth/google/callback
FRONTEND_URL=https://rapiddocs.io

# Bitcoin Payment Configuration
# IMPORTANT: Change to mainnet for production if accepting real payments
BITCOIN_NETWORK=testnet
BITCOIN_PERSONAL_WALLET=tb1qw508d6qejxtdg4y5r3zarvary0c5xw7kxpjzsx
BITCOIN_CONFIRMATIONS_REQUIRED=3
BITCOIN_PAYMENT_TIMEOUT_MINUTES=60
BITCOIN_API_URL=https://blockstream.info/testnet/api

# For mainnet, use these settings instead:
# BITCOIN_NETWORK=mainnet
# BITCOIN_PERSONAL_WALLET=YOUR_MAINNET_BITCOIN_ADDRESS
# BITCOIN_API_URL=https://blockstream.info/api
