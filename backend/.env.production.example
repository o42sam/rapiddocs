# Application
APP_NAME=RapidDocs
APP_ENV=production
DEBUG=False
API_PREFIX=/api/v1

# MongoDB Atlas
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=rapiddocs
MONGODB_DB_NAME=rapiddocs_prod

# Hugging Face
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxx
TEXT_GENERATION_MODEL=meta-llama/Llama-3.2-3B-Instruct
IMAGE_GENERATION_MODEL=black-forest-labs/FLUX.1-schnell

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_FORMATS=png,jpg,jpeg,svg

# PDF Generation
PDF_OUTPUT_DIR=./generated_pdfs
PDF_DPI=300

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://rapiddocs.io,https://www.rapiddocs.io

# Authentication / JWT
# IMPORTANT: Use strong random keys in production! Generate using: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
JWT_REFRESH_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
